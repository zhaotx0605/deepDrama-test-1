{
  "name": "deepdrama",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:d1": "wrangler pages dev dist --d1=deepdrama-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "db:migrate:local": "wrangler d1 migrations apply deepdrama-production --local",
    "db:seed": "wrangler d1 execute deepdrama-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed"
  },
  "dependencies": {
    "hono": "^4.11.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "vite": "^6.0.0",
    "wrangler": "^4.52.0"
  }
}
